<%= simple_form_for :twoot, url: replies_url, remote: true, authenticity_token: true do |f| %>
  <%= f.error_notification %>
  <%= f.hidden_field :reply_id, value: "#{local_assigns[:reply_id]}" %>
  <div class="field">
    <div class="control">
      <%= f.input :body, label: twoot_label, input_html: { class: "textarea " }, wrapper: false, 
      label_html: { class: "label" }, placeholder: "Compose your twoot...", autofocus: true %>
    </div>
  </div>
  <%= f.button :submit, class: "button is-info" %>
<% end %>