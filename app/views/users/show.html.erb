<section class="section">
  <div class="container">
    <div class="columns">
      <div class="column is-one-quarter">
        <% if user_signed_in? %>
          <%= render 'profile', user: current_user %>
        <% else %>
          <%= render 'twoots/trends' %>
        <% end %>
      </div>
      <div class="column is-half is-centered">
        <%= render 'profile_large', user: @user %>
        <% @user.twoots.each do |twoot| %>
          <%= render 'twoots/twoot_with_replies', twoot: twoot %>
        <% end %>
      </div>
    </div>
  </div>
</section>
