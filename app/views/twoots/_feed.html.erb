<div class="column is-half">
  <% if user_signed_in? %>
  <article class="media box">
    <figure class="media-left">
      <p class="image is-64x64">
        <%= gravatar_image_tag(current_user.email, size: 64, alt: current_user.name) %>
      </p>
    </figure>
    <div class="media-content">
      <%= render 'form' %>
    </div>
    </article>
    <% end %>

<% @twoots.each do |twoot| %>
  <% twooter = twoot.user %>
  <div class="box">
    <article class="media">
      <div class="media-left">
        <figure class="image is-64x64">
          <%= gravatar_image_tag(twooter.email, size: 64, alt: twooter.name) %>
       </figure>
      </div>
  <div class="media-content">
    <div class="content">
      <strong><%= twooter.name %></strong>
      <small>@<%= twooter.username %></small>
      <p><%= twoot.body %></p>
    </div>
  </div>

  <nav class="level">
    <div class="level-left is-mobile">
      <%= link_to twoot, class: "level-item" do %>
        <span class="icon"><i class="fa fa-link" aria-hidden="true"></i></span>
      <% end %>
      <% if user_signed_in? && twoot.user == current_user %>
      <%= link_to edit_twoot_path(twoot), class: "level-item" do %>
        <span class="icon"><i class="fa fa-pencil" aria-hidden="true"></i></span>
      <% end %>

      <%= link_to twoot, method: :delete, data: { confirm: "Are you sure you want to delete this twoot?" } do %>
        <span class="icon"><i class="fa fa-trash-o" aria-hidden="true"></i></span>
      <% end %>
      <% end %>
    </div>
  </nav>
  </article>
  </div>
<% end %>
</div>